<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <LinearGradientBrush x:Key="selectionGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="White" Offset="0" />
        <GradientStop Color="#FFCD18" Offset="0.2" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="backGradient">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#FFFFFF" Offset="0.7" />
        <GradientStop Color="#DDDDDD" Offset="1" />
    </LinearGradientBrush>
    
</ResourceDictionary>